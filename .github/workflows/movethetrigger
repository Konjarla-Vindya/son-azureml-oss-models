name: My Workflow
on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Check Out Code
        uses: actions/checkout@v2

      - name: Run My Workflow from a Different Folder
        run: |
          cd .github/workflows-sonata
          # Run your workflow file
          # For example, if your workflow file is named 'my-other-workflow.yml':
          # workflow-command-to-run my-other-workflow.yml
